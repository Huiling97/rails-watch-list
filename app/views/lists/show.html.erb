<%= render 'shared/banner' %>

<h1><%= @list.name %></h1>

<p>All your bookmarks</p>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.comment %>
      <%= bookmark.movie.title %> || <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
      <img src=<%= bookmark.movie.poster_url %> alt="<%= bookmark.movie %>">
      <%= bookmark.movie.overview %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new bookmark", new_list_bookmark_path(@list) %>
<%= link_to "Back to all lists", lists_path %>
