<%= render 'shared/banner', banner_img: @list.photo.key, banner_content: @list.name %>

<div class="container">
  <div class="custom-container">
    <h2>All your bookmarks</h2>
    <%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @list.bookmarks.each do |bookmark| %>
      <%= render 'shared/movieCard', bookmark: bookmark %>
    <% end %>
  </div>

  <div class="custom-container">
    <div class="card" style="width: 18rem;">
      <ul class="list-group list-group-flush">
        <% @list.reviews.each do |review| %>
          <%= render 'reviews/reviewCard', review: review %>
        <% end %>
      </ul>
    </div>

    <div class="form">
      <%= simple_form_for [@list, @review] do |f| %>
        <%= f.input :comments %>
        <%= f.input :rating %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
