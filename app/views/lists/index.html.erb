<%= render 'shared/banner' %>

<div class="container">
  <div class="custom-container">
    <h3>My Lists</h3>
    <div>
      <%= link_to "Create new list", new_list_path, class: "btn btn-flat"%>
    </div>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <%= render 'shared/card', list: list %>
    <% end %>
  </div>
</div>
